  "dependencies": {
    "dexie": "^4.2.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.15",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4"
  },
  "peerDependencies": {
    "@supabase/supabase-js": "^2.87.1"
  }
