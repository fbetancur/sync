{
  "name": "@sync/core",
  "version": "1.0.0",
  "description": "Core offline-first infrastructure for Sync Platform",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
